@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <div>
        <table class="table">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                    </tr>
            @{
                foreach(var p in Model.Products)
                {
                    <tr>
                         <td>@p.Name</td>
                         <td>@p.Description</td>
                         <td>@p.Price</td>
                    </tr>
                }  
            }
                    
         </table>
    </div>
</div>
