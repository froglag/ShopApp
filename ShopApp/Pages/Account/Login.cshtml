@page
@model ShopApp.Pages.Account.LoginModel
@{
}

<h2>Login</h2>
    <form method="post">
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" asp-for="Input.Email" required>
        </div>
        <div>
            <label for="password">Пароль:</label>
            <input type="password" id="password" name="password" asp-for="Input.Password" required>
        </div>
        <div>
            <button type="submit">Войти</button>
        </div>
    </form>