@page
@model ShopApp.Pages.Checkout.CustomerInformationModel
@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-page-handler="AddCustomerInformation" method="post">
                <div class="form-group">
                    <label asp-for="CustomerInformation.Name"></label>
                    <input asp-for="CustomerInformation.Name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInformation.LastName"></label>
                    <input asp-for="CustomerInformation.LastName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInformation.Email"></label>
                    <input asp-for="CustomerInformation.Email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInformation.PhoneNumber"></label>
                    <input asp-for="CustomerInformation.PhoneNumber" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInformation.Address1"></label>
                    <input asp-for="CustomerInformation.Address1" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInformation.Address2"></label>
                    <input asp-for="CustomerInformation.Address2" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInformation.City"></label>
                    <input asp-for="CustomerInformation.City" class="form-control" required>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInformation.PostCode"></label>
                    <input asp-for="CustomerInformation.PostCode" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>